<script>
  // ================================
  // ë¹„ë°€ë²ˆí˜¸ ì—¬ê¸°ì„œ ë³€ê²½í•˜ì„¸ìš”!
  const ADMIN_PASSWORD = '1234';
  // ================================

  let items = JSON.parse(localStorage.getItem('bt_items') || '[]');
  let currentFilter = 'all';
  let isAdmin = sessionStorage.getItem('bt_auth') === '1';

  function init() {
    if (isAdmin) enterAdmin();
    else enterUser();
  }

  function enterUser() {
    isAdmin = false;
    document.getElementById('userView').style.display = 'block';
    document.getElementById('adminView').style.display = 'none';
    document.getElementById('modeLabel').textContent = '// í”¼ë“œë°± ì œì¶œ';
    document.getElementById('adminBtn').textContent = 'ê´€ë¦¬ì ì ‘ì†';
    document.getElementById('adminBtn').classList.remove('active');
  }

  function enterAdmin() {
    isAdmin = true;
    sessionStorage.setItem('bt_auth', '1');
    document.getElementById('userView').style.display = 'none';
    document.getElementById('adminView').style.display = 'block';
    document.getElementById('modeLabel').textContent = '// ê´€ë¦¬ì';
    document.getElementById('adminBtn').textContent = 'ê´€ë¦¬ì ëª¨ë“œ âœ“';
    document.getElementById('adminBtn').classList.add('active');
    renderAdmin();
  }

  function logout() {
    sessionStorage.removeItem('bt_auth');
    enterUser();
  }

  function onAdminBtnClick() {
    if (isAdmin) { logout(); return; }
    document.getElementById('adminModal').classList.add('show');
    document.getElementById('pwInput').value = '';
    document.getElementById('pwError').textContent = '';
    setTimeout(() => document.getElementById('pwInput').focus(), 100);
  }

  function closeModal() {
    document.getElementById('adminModal').classList.remove('show');
  }

  function checkPw() {
    const pw = document.getElementById('pwInput').value;
    if (pw === ADMIN_PASSWORD) {
      closeModal();
      enterAdmin();
    } else {
      document.getElementById('pwError').textContent = '// ë¹„ë°€ë²ˆí˜¸ê°€ í‹€ë ¸ìŠµë‹ˆë‹¤';
      document.getElementById('pwInput').value = '';
      document.getElementById('pwInput').focus();
    }
  }

  function submitFeedback() {
    const title = document.getElementById('titleInput').value.trim();
    if (!title) { document.getElementById('titleInput').focus(); return; }
    const item = {
      id: Date.now(),
      title,
      desc: document.getElementById('descInput').value.trim(),
      type: document.getElementById('typeSelect').value,
      priority: document.getElementById('prioritySelect').value,
      done: false,
      date: new Date().toLocaleDateString('ko-KR', {month:'2-digit', day:'2-digit'})
    };
    items.unshift(item);
    save();
    document.getElementById('titleInput').value = '';
    document.getElementById('descInput').value = '';
    const msg = document.getElementById('successMsg');
    msg.style.display = 'block';
    setTimeout(() => msg.style.display = 'none', 3000);
  }

  function save() { localStorage.setItem('bt_items', JSON.stringify(items)); }

  function toggleDone(id) {
    const item = items.find(i => i.id === id);
    if (item) { item.done = !item.done; save(); renderAdmin(); }
  }

  function deleteItem(id) {
    items = items.filter(i => i.id !== id);
    save(); renderAdmin();
  }

  function setFilter(f, btn) {
    currentFilter = f;
    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');
    renderAdmin();
  }

  function renderAdmin() {
    document.getElementById('countBug').textContent = items.filter(i => i.type === 'bug' && !i.done).length;
    document.getElementById('countImprove').textContent = items.filter(i => i.type === 'improvement' && !i.done).length;
    document.getElementById('countDone').textContent = items.filter(i => i.done).length;

    let filtered;
    if (currentFilter === 'done') filtered = items.filter(i => i.done);
    else if (currentFilter !== 'all') filtered = items.filter(i => i.type === currentFilter && !i.done);
    else filtered = items.filter(i => !i.done).concat(items.filter(i => i.done));

    const list = document.getElementById('itemList');
    if (!filtered.length) {
      list.innerHTML = '<div class="empty">// í•­ëª©ì´ ì—†ìŠµë‹ˆë‹¤</div>';
      return;
    }

    list.innerHTML = filtered.map(item => `
      <div class="item ${item.type} ${item.done ? 'done' : ''}">
        <div>
          <div class="item-title">${escHtml(item.title)}</div>
          ${item.desc ? `<div class="item-desc">${escHtml(item.desc)}</div>` : ''}
          <div class="item-meta">
            <span class="tag ${item.done ? 'done' : item.type}">${item.done ? 'âœ“ ì™„ë£Œ' : item.type === 'bug' ? 'ë²„ê·¸' : 'ê°œì„ '}</span>
            <span class="tag priority-${item.priority}">${item.priority === 'high' ? 'ë†’ìŒ' : item.priority === 'mid' ? 'ë³´í†µ' : 'ë‚®ìŒ'}</span>
            <span class="date">${item.date}</span>
          </div>
        </div>
        <div class="item-actions">
          <button class="icon-btn check" title="ì™„ë£Œ í† ê¸€" onclick="toggleDone(${item.id})">âœ“</button>
          <button class="icon-btn del" title="ì‚­ì œ" onclick="deleteItem(${item.id})">âœ•</button>
        </div>
      </div>
    `).join('');
  }

  function escHtml(s) {
    return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
  }

  document.getElementById('titleInput').addEventListener('keydown', e => {
    if (e.key === 'Enter') submitFeedback();
  });

  document.getElementById('adminModal').addEventListener('click', function(e) {
    if (e.target === this) closeModal();
  });

  init();
</script>
</body>
</html>
