<div id="adminView">
  <div class="logout-bar">
    <span>âœ“ ê´€ë¦¬ì ëª¨ë“œ</span>
    <button class="btn ghost" style="font-size:0.75rem;padding:0.3rem 0.8rem" onclick="logout()">ë¡œê·¸ì•„ì›ƒ</button>
  </div>

  <div class="stats">
    <div class="stat bug"><span class="num" id="countBug">0</span>ë²„ê·¸</div>
    <div class="stat improve"><span class="num" id="countImprove">0</span>ê°œì„ ì‚¬í•­</div>
    <div class="stat done"><span class="num" id="countDone">0</span>ì™„ë£Œ</div>
  </div>

  <div class="filter-bar">
    <button class="filter-btn active" onclick="setFilter('all', this)">ì „ì²´</button>
    <button class="filter-btn" onclick="setFilter('bug', this)">ë²„ê·¸</button>
    <button class="filter-btn" onclick="setFilter('improvement', this)">ê°œì„ ì‚¬í•­</button>
    <button class="filter-btn" onclick="setFilter('done', this)">ì™„ë£Œ</button>
  </div>

  <div class="items" id="itemList"></div>
